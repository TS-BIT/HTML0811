{{#if zmogus}}
<h1>Informacija apie zmogu:</h1>

<form action="/zmogus" method="post">
    {{#if zmogus}}`
    <input type="hidden" name="id" value="{{zmogus.id}}">
    {{/if}}
        Vardas: <input type="text" name="vardas" value="{{zmogus.vardas}}"><br>
        Pavarde: <input type="text" name="pavarde" value="{{zmogus.pavarde}}><br>
        Alga: <input type="text" name="alga" value="{{zmogus.alga}}><br>
        <input type="submit" value="Save"><br>
    </form>
Vardas: <i><b>{{vardas}}</b><br></i>
Pavarde: <b>{{pavarde}}</b><br>
Alga: <b>{{alga}}</b><br>
{{/with}}
{{else}}
<h1>Nezinau as tokio zmogaus</h1>
{{/if}}
<a href="/">Back</a>
